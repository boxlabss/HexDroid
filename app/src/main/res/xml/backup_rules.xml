<?xml version="1.0" encoding="utf-8"?>
<!-- Disable Auto Backup on Android 11 and lower (fullBackupContent="false" already does this),
     kept here for completeness if you later switch to a rule-based allowlist. -->
<full-backup-content>
    <exclude domain="root" path="." />
    <exclude domain="file" path="." />
    <exclude domain="database" path="." />
    <exclude domain="sharedpref" path="." />
    <exclude domain="external" path="." />
</full-backup-content>
